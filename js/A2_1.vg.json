{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/gni_per_capita_ordered_2000_2022.csv"
  },
  
  
  "params": [
    {
      "name": "Year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2022,
        "step": 1,
        "name": "Year:  "
      }
    }
  ],
  "width": 740,
  "height": 400,
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    
    {
      "data": {
        "url": "data/oceans.json",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "grey",
        "fill": "#96c4ff"
      }
    },
    {"data": {
      "url": "data/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "projection": {"type": "equalEarth"},
    "mark": {"type": "geoshape", "stroke": null, "fill": "lightgray"}
  },
  {
    "transform": [
      {
        "calculate": "'‚ùåunavailable data in ' + datum.properties.name",
        "as": "note"
      }
    ],
    "data": {
      "url": "data/world_map.json",
      "format": {"type": "topojson", "feature": "countries"}
    },
    "mark": {"type": "geoshape", "stroke": "grey", "fill": "lightgrey"},
    "encoding": {"tooltip": {"field": "note"}}
  },
    {
      "transform": [
        {
          "lookup": "Country Name",
          "from": {
            "data": {
              "url": "data/world_map.json",
              "format": {
                "type": "topojson",
                "feature": "countries"
              }
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {
          "filter": "year(datum.Year) == Year_selection"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "grey"
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "GNI per Capita",
          "type": "quantitative",
          "title": "GNI per Capita",
          "scale": {
            "domainMax": 60000,
            "scheme": "plasma",
            "reverse": true
          }
        },
        "tooltip": [
          {
            "field": "Country Name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "GNI per Capita",
            "type": "quantitative",
            "title": "Income per Person (in USD)",
            "format": ".2f"
          },
          {
            "field": "Year",
            "type": "ordinal",
            "title": "Data Year"
          }
        ]
      }
    },
    {
      "data": {
        "url": "data/graticules.json",
        "format": {
          "type": "topojson",
          "feature": "graticules"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "fill": null
      }
    }
  ]
}
